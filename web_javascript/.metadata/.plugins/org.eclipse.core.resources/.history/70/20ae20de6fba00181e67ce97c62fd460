<p id="target">
    Hello world
</p>
<input type="button" value="attribute" onclick="attt()">
<input type="button" value="property" onclick="propp()">
</body>
<script>
    var target = document.getElementById('target');
    // attribute 방식
    function attt(){
    target.setAttribute('style', 'background: red');
    }
    // property 방식
    function propp(){
    target.style.color = 'blue';
    }
</script>

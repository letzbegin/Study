<input type="text" onclick="alert(location.toString(), location.href);" value="주소 알아보기">


<input type="button" id="detail" value="세부사항 알아보기">


<script type="text/javascript">
var detail = document.getElementById('detail');
detail.addEventListener('click',function(){
<!--
웹 주소
https://opentutorials.org/course/1375/6634?id=아이디#bookmark

https://			||프로토콜	||location.protocol
opentutorials.org	||호스트		||location.host
/course/1375/6634	||패스		||location.pathname
?id=아이디			||서치		||location.search
#bookmark			||해시		||location.hash
  -->
alert(location.protocol, location.host, location.port, location.pathname, location.search, location.hash)
	
});

</script>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
    <definition name="layout" template="/WEB-INF/views/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/views/include/top.jsp" />
        <put-attribute name="main" value="" />
        <put-attribute name="body" value="/WEB-INF/views/include/body.jsp" />
        <put-attribute name="footer" value="/WEB-INF/views/include/footer.jsp" />
        <put-attribute name="css" value="/WEB-INF/views/css/main.css" />
    </definition>
 
    <definition name="*" extends="layout">
        <put-attribute name="main" value="/WEB-INF/views/{1}.jsp" />
    </definition>
    <definition name="*/*" extends="layout">
        <put-attribute name="main" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>
</tiles-definitions>
